# EditorConfig: https://editorconfig.org
# Kite VS Code extension: TypeScript, JSON, YAML, Markdown

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{sh,bash}]
indent_style = space
indent_size = 2

[*.{js,ts,cjs,mjs}]
indent_style = space
indent_size = 2
